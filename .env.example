# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rag_db
DB_USER=user
DB_PASSWORD=password

# For Docker Compose, use 'db' as DB_HOST
# DB_HOST=db

# Full Database URL (alternative to individual DB_ variables)
# DATABASE_URL=postgresql://user:password@localhost:5432/rag_db

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# JWT Authentication Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Default Admin User Configuration
# These will be used to create the initial admin user on startup
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Frontend Configuration
# API base URL for frontend requests (optional, defaults to current domain)
# REACT_APP_API_BASE_URL=http://localhost:8000

# CORS Configuration
# Allowed origins for CORS (comma-separated, optional)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO

# Production Security (uncomment and configure for production)
# SECURE_SSL_REDIRECT=true
# SESSION_COOKIE_SECURE=true
# CSRF_COOKIE_SECURE=true

# Redis Configuration (if using Redis for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (if implementing email features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourapp.com
